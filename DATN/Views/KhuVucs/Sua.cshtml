@model DATN.Models.KhuVuc

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa khu vực</h1>

<h4>Khu vực</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Sua" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhuVuc" />
            <div class="form-group">
                <label asp-for="TenKhuVuc" class="control-label">Tên khu vực</label>
                <input asp-for="TenKhuVuc" class="form-control" />
                <span asp-validation-for="TenKhuVuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienTich" class="control-label">Diện tích</label>
                <input asp-for="DienTich" class="form-control" />
                <span asp-validation-for="DienTich" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham" class="control-label">Sản phẩm</label>
                <input asp-for="SanPham" class="form-control" />
                <span asp-validation-for="SanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnhSanPham" class="control-label">Hình ảnh sản phẩm</label>
                <img asp-for="HinhAnhSanPham" src="@Model.HinhAnhSanPham" height="200" width="200"/>
                <span asp-validation-for="HinhAnhSanPham" class="text-danger"></span>
                <input name="fileAnh" type="file"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSachKhuVuc" class="btn btn-primary">Quay lại danh sách</a>
</div>
